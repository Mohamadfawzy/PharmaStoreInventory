<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AdminApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AdminApp.Views"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="Command" Value="{Binding NavigateCommand}" />
                <Setter Property="VerticalOptions" Value="Start" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout Padding="30">
        <Button
            Margin="0,0,0,30"
            Text="Login"
            CommandParameter="{x:Type views:LoginView}" />
        <Button Text="Users" CommandParameter="{x:Type views:UsersView}" />
    </VerticalStackLayout>

</ContentPage>
