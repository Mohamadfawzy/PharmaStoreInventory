        <!--  if colection empty  -->
        <VerticalStackLayout
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.ColumnSpan="2"
            IsVisible="{Binding IsPlaceholderVisible}"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label
                Text="لا يوجد طلبات تفعيل"
                HorizontalTextAlignment="Center"
                FontSize="25" />
        </VerticalStackLayout>

        <!--  FilterOption  -->
        <CollectionView
            x:Name="usersFilterOptionCollection"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            SelectionMode="Single"
            ItemsSource="{Binding UsersFilterOption}"
            SelectionChangedCommand="{Binding UsersFilterOptionSelectionChangedCommand}"
            SelectionChangedCommandParameter="{Binding SelectedItem, Source={x:Reference usersFilterOptionCollection}}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10,0" BackgroundColor="White">
                        <Border
                            Padding="5,3"
                            BackgroundColor="{StaticResource Primary100}"
                            StrokeShape="RoundRectangle 15">
                            <StackLayout Orientation="Horizontal">
                                <!--  Name of the Select  -->
                                <Label Text="{Binding Name}" FontSize="20" />
                            </StackLayout>
                            <Border.Triggers>
                                <DataTrigger
                                    TargetType="Border"
                                    Binding="{Binding IsSelected}"
                                    Value="True">
                                    <Setter Property="BackgroundColor" Value="{StaticResource Primary500}" />
                                </DataTrigger>
                            </Border.Triggers>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--  Collection  -->
        <RefreshView
            Grid.Row="2"
            Grid.ColumnSpan="2"
            IsRefreshing="{Binding IsRefreshing}"
            Command="{Binding RefreshCommand}">
            <CollectionView x:Name="collection" ItemsSource="{Binding Users}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,2"
                            Padding="10"
                            StrokeShape="RoundRectangle 6"
                            Stroke="{StaticResource Primary100}">
                            <VerticalStackLayout>
                                <Label Text="{Binding FullName}" FontSize="30" />
                                <Label Text="{Binding PharmcyName}" />
                                <Label Text="{Binding CreateOn, StringFormat='{}{0:MM-dd-yyyy}'}" />
                                <Button
                                    Grid.Column="1"
                                    Margin="20,0"
                                    Padding="50,0"
                                    Text="قبول"
                                    FontSize="14"
                                    HeightRequest="40"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:UsersViewModel}}, Path=ActiveAccountCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="{StaticResource SuccessColor}"
                                    HorizontalOptions="End">
                                    <Button.Triggers>
                                        <DataTrigger
                                            TargetType="Button"
                                            Binding="{Binding IsActive}"
                                            Value="true">
                                            <Setter Property="IsVisible" Value="False" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </VerticalStackLayout>

                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="GoToUserDetailsViewTapped" />
                            </Border.GestureRecognizers>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.Header>
                    <StackLayout Padding="1" />
                </CollectionView.Header>

                <CollectionView.Footer>
                    <StackLayout Padding="20,0" MinimumHeightRequest="50">
                        <!--  Load More Button  -->
                        <Button
                            IsVisible="{Binding IsLoadMoreButtonVisible}"
                            BackgroundColor="White"
                            TextColor="Black"
                            Text="تحميل المزيد"
                            FontFamily="{StaticResource KufiSemiBold}"
                            Command="{Binding LoadMoreDataCommand}" />
                    </StackLayout>
                </CollectionView.Footer>
            </CollectionView>
        </RefreshView>

