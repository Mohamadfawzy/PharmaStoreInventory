<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PharmaStoreInventory.Views.AllStockView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:template="clr-namespace:PharmaStoreInventory.Views.Templates"
    xmlns:vm="clr-namespace:PharmaStoreInventory.ViewModels"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:icon="clr-namespace:DrasatHealthMobile.Helpers"
    xmlns:help="clr-namespace:PharmaStoreInventory.Helpers"
    x:Name="ThisPage"
    Title="AllStockView"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="CheckBox">
                <Setter Property="Color" Value="{StaticResource Primary700}" />
                <Setter Property="Grid.Column" Value="1" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <vm:AllStockViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,Auto,*">
        <!--  Header  -->
        <StackLayout
            Padding="10,5"
            IsVisible="True"
            Orientation="Horizontal"
            BackgroundColor="{StaticResource Primary800}"
            ZIndex="1">
            <Label
                Margin="10"
                FontSize="22"
                TextColor="{StaticResource Primary050}"
                FontFamily="{StaticResource IconFont}"
                Text="{x:Static help:IconFontManager.ArrowIcon}" />
            <Label Text="كل الأصناف" TextColor="{StaticResource Primary050}" />
        </StackLayout>

        <!--  SEARCH BOX  -->
        <StackLayout
            Grid.Row="1"
            Orientation="Horizontal"
            BackgroundColor="{StaticResource Primary800}">
            <template:SearchBoxTemplate Command="{Binding SearchBoxTypingCommand}" HorizontalOptions="FillAndExpand" />
            <!--  Filter Icon  -->
            <Frame
                Grid.Column="1"
                Margin="0"
                Padding="4"
                BackgroundColor="Transparent"
                BorderColor="Transparent"
                CornerRadius="5"
                HorizontalOptions="End"
                VerticalOptions="Center">
                <Label
                    FontFamily="{StaticResource IconFont}"
                    FontSize="30"
                    Text="{x:Static icon:IconFont.FilterVariant}"
                    TextColor="{StaticResource White}" />

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OpenFiltrFrame" />
                </Frame.GestureRecognizers>
            </Frame>
        </StackLayout>

        <!--  collection  -->
        <CollectionView
            x:Name="allStockList"
            Grid.Row="2"
            Margin="5,10,5,0"
            FlowDirection="LeftToRight"
            BackgroundColor="{StaticResource White}"
            ItemsSource="{Binding StockModelList}"
            SelectionChanged="AllStockList_SelectionChanged"
            SelectionMode="Single">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="10,0"
                        StrokeShape="RoundRectangle 6"
                        Stroke="{StaticResource Primary100}">
                        <StackLayout Orientation="Horizontal">
                            <BoxView
                                Margin="0,0"
                                WidthRequest="8"
                                HorizontalOptions="Start"
                                Color="{StaticResource Primary}" />

                            <Grid
                                Padding="10,0"
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="{StaticResource White}"
                                RowDefinitions="Auto,Auto,*">

                                <Label
                                    Text="{Binding Name}"
                                    Style="{StaticResource Titleline}"
                                    HorizontalTextAlignment="Start"
                                    MaxLines="2"
                                    FontSize="15" />

                                <!--  icon  -->
                                <!--<Label
                                    IsVisible="False"
                                    Text="{x:Static icon:IconFont.CheckboxBlankCircle}"
                                    Style="{StaticResource Iconline}"
                                    TextColor="{StaticResource Primary200}"
                                    HorizontalOptions="End"
                                    VerticalOptions="Center">
                                    <Label.Triggers>
                                        <DataTrigger
                                            TargetType="Label"
                                            Binding="{Binding IsCounted}"
                                            Value="True">
                                            <Setter Property="Text" Value="{x:Static icon:IconFont.CheckboxMarkedCircle}" />
                                            <Setter Property="TextColor" Value="{StaticResource Primary700}" />
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>-->



                                <!--  Quantity  -->
                                <HorizontalStackLayout
                                    Grid.Row="2"
                                    Spacing="3"
                                    HorizontalOptions="End">
                                    <Label
                                        Margin="0"
                                        Padding="0"
                                        FontSize="20"
                                        Text="{Binding Quantity}"
                                        TextColor="{StaticResource ErrorDarkColor}"
                                        VerticalTextAlignment="End" />
                                    <Label
                                        Text="Stock"
                                        VerticalTextAlignment="End"
                                        FontSize="10" />
                                </HorizontalStackLayout>

                                <!--  Price Group  -->
                                <HorizontalStackLayout Grid.Row="2" Spacing="3">
                                    <Label
                                        Margin="0"
                                        Padding="0"
                                        Text="{Binding SalePrice}"
                                        TextColor="{StaticResource Primary300}"
                                        VerticalTextAlignment="End" />
                                    <Label
                                        Text="L.E"
                                        VerticalTextAlignment="End"
                                        TextColor="{StaticResource Gray300}"
                                        FontSize="10" />
                                </HorizontalStackLayout>

                            </Grid>
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!--  Popup  -->

        <Grid
            x:Name="borderFilter"
            Grid.Row="0"
            Grid.RowSpan="3"
            Padding="20"
            ZIndex="1"
            TranslationY="800"
            BackgroundColor="{StaticResource White}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer />
            </Grid.GestureRecognizers>

            <!--  #### Hedear  ####  -->
            <Label Margin="0" Text="التصفية" />

            <!--  CloseIcon  -->
            <Button
                Padding="0"
                BackgroundColor="{StaticResource Primary050}"
                Clicked="CloseFiltrFrame"
                HeightRequest="50"
                WidthRequest="50"
                CornerRadius="25"
                FontSize="22"
                VerticalOptions="Start"
                HorizontalOptions="EndAndExpand"
                FontFamily="{StaticResource IconFont}"
                TextColor="{StaticResource Primary}"
                Text="{x:Static icon:IconFont.Close}" />

            <Grid
                Padding="0,20"
                RowDefinitions="Auto,Auto,Auto,*"
                RowSpacing="10">

                <!--  Title  -->
                <Label Text="ترتيب حسب" HorizontalOptions="Start" />

                <!--  ####_SortList_####  -->
                <CollectionView
                    x:Name="sortCollection"
                    Grid.Row="1"
                    SelectionMode="Single"
                    ItemsSource="{Binding SortListItems}"
                    SelectionChangedCommand="{Binding StoreSelectionChangedCommand}"
                    SelectionChangedCommandParameter="{Binding SelectedItem, Source={x:Reference sortCollection}}">

                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            Span="2"
                            Orientation="Vertical"
                            HorizontalItemSpacing="15" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <!--  Name of the Select  -->
                                <Label Padding="2,10" Text="{Binding Name}" />
                                <!--  Icon  -->
                                <Label
                                    Padding="2,0"
                                    Text="{x:Static icon:IconFont.CheckboxBlankCircle}"
                                    Style="{StaticResource Iconline}"
                                    TextColor="{StaticResource Primary200}"
                                    HorizontalOptions="End"
                                    VerticalOptions="Center">
                                    <Label.Triggers>
                                        <DataTrigger
                                            TargetType="Label"
                                            Binding="{Binding IsSelected}"
                                            Value="True">
                                            <Setter Property="Text" Value="{x:Static icon:IconFont.CheckboxMarkedCircle}" />
                                            <Setter Property="TextColor" Value="{StaticResource Primary700}" />
                                            <!--  Multiple Setter elements are allowed  -->
                                        </DataTrigger>
                                    </Label.Triggers>
                                </Label>
                                <!--  end Icon  -->
                                <BoxView
                                    HeightRequest="1"
                                    BackgroundColor="{StaticResource Primary200}"
                                    HorizontalOptions="Fill"
                                    VerticalOptions="End" />
                                <Grid.Triggers>
                                    <DataTrigger
                                        TargetType="Grid"
                                        Binding="{Binding IsSelected}"
                                        Value="True">
                                        <Setter Property="BackgroundColor" Value="{StaticResource Primary300}" />
                                        <!--  Multiple Setter elements are allowed  -->
                                    </DataTrigger>
                                </Grid.Triggers>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!--  Other Filters  -->
                <Grid
                    Grid.Row="2"
                    Margin="0,10"
                    RowDefinitions="Auto,*"
                    ColumnDefinitions="*,*"
                    RowSpacing="20">
                    <CheckBox ClassId="CheckBox_1" CheckedChanged="CheckBox_CheckedChanged" />
                    <Label Style="{StaticResource Body}" Text="دمج حسب تاريخ الصلاحية" />

                    <CheckBox
                        Grid.Row="1"
                        AutomationId="2"
                        ClassId="CheckBox_2"
                        CheckedChanged="CheckBox_CheckedChanged" />
                    <Label
                        Grid.Row="1"
                        Style="{StaticResource Body}"
                        Text="كميات أقل من صفر" />

                </Grid>
                <!--  Submit button  -->
                <Button
                    Grid.Row="3"
                    Margin="30,10"
                    Text="اختيار"
                    VerticalOptions="Center" />
            </Grid>


            <Label Text="" />

        </Grid>

    </Grid>
</ContentPage>