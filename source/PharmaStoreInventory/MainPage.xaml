<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PharmaStoreInventory.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:icon="clr-namespace:DrasatHealthMobile.Helpers"
    Padding="0,50,0,0"
    NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label
                Text="{x:Static icon:IconFont.OutdoorLamp}"
                FontFamily="IconFontMaterial"
                FontSize="Body" />
            <Button Text="Obbording" Clicked="GoToOnbording1" />
            <Button Text="Login" Clicked="GoToLogin" />
            <Button Text="Register" Clicked="GoToRegister" />
            <Button Text="WaitingApprovalView" Clicked="GoToWaitingApprovalView" />
            <Button Text="CreateBranchView" Clicked="GoToCreateBranchView" />
            <Button Text="AllStockView" Clicked="GoToAllStockView" />
            <Button Text="Barcode Reader View" Clicked="GoToBarcodeReaderView" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
